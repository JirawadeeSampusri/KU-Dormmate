{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  
  "plugins": [  "prettier"],
  "rules": {
    
    "prettier/prettier": ["error", {"singleQuote": true}],
//    "prettier/prettier": ["error", {"singleQuote": false}],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"]
    
  }
}
